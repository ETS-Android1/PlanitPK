<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main"
    tools:context=".Welcome">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/welcomewall" />

    <TextView
        android:id="@+id/txtWelcomeMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fontFamily="@font/bungee"
        android:padding="20dp"
        android:text="Let's make your dream vacation"
        android:textColor="@color/off_white"
        android:textSize="36sp" />

    <Button
        android:id="@+id/getStartedBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/txtWelcomeMsg"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/off_white"
        android:clickable="true"
        android:fontFamily="@font/poppins"
        android:text="Start tour"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/skip_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/getStartedBtn"
        android:layout_centerInParent="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="23dp"
        android:backgroundTint="#0fffffff"
        android:onClick="skip"
        android:text="Skip and begin exploring"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />


</RelativeLayout>